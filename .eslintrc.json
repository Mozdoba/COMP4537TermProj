{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2019,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "linebreak-style": ["error", "unix"],
    "max-lines": [
      "error",
      {
        "max": 1000
      }
    ],
    "no-var": "error",
    "prefer-const": "error",
    "no-return-assign": "error",
    "no-duplicate-imports": ["error", { "includeExports": true }],
    "no-useless-constructor": "warn"
  }
}
